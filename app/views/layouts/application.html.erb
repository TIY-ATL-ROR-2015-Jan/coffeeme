<!DOCTYPE html>
<html>
<head>
  <title>Coffeeme</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= stylesheet_link_tag "//netdna.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css" %>
  <%= stylesheet_link_tag "//fonts.googleapis.com/css?family=Open+Sans:300,400" %>
  <%= csrf_meta_tags %>
</head>
<body>
    <div class="container">
      <div class="flash">
        <% flash.each do |name, msg| %>
          <div class="alert alert-#{flash_class name}">
            <a class="close" data-dismiss="alert">
              <div id="flash_#{flash_class name}">
                <%= msg %>
              </div>
            </a>
          </div>
        <% end %>
      </div>
    </div>


<%= yield %>

</body>
</html>
