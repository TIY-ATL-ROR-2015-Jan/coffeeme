  <div class="max-width">
    <div class="cta">
      Push butan. Receive kitteh.
      <% if @incoming %>
        | Kitteh incoming. Would you like another?
      <% end %>
      <%= button_to serve_cats_path, method: :post, id: "cat_button", class: "button" do %>
          <div class="i fa fa-paw">| Cat Me</div>
      <% end %>


<% content_for :javascript do %>
  $(".inner form").submit(function() {
    $("#cat_button").
      addClass("disabled").
      attr("disabled", true).
      html("<i class='fa fa-spinner fa-spin'></i>Herding Catsâ€¦");
  });
<% end %>
